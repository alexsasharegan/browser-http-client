{
	"compilerOptions": {
		"lib": ["dom", "es2015", "es2016", "es2017"],
		"outDir": "./lib/",
		"declaration": true,
		// "declarationDir": "./types/",
		"sourceMap": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
